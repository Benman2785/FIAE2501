<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myOrange"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_TextKlausur"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_SignIn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_Text1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_ButtonSignVia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_Text2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_UserPW"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="411dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_ForgotPW"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_SignInButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GL_ButtonTrenner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/TextKlausur"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/myBlue"
        android:paddingLeft="10pt"
        android:paddingTop="5pt"
        android:text="@string/klausur"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/GL_TextKlausur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/GL_SignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextKlausur" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_via_facebook_or_twitter"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/GL_Text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_SignIn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/myBlue"
        android:text="@string/facebook"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/GL_ButtonSignVia"
        app:layout_constraintEnd_toStartOf="@+id/GL_ButtonTrenner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_Text1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Twitter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/myLBlue"
        android:text="@string/twitter"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toTopOf="@+id/GL_ButtonSignVia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GL_ButtonTrenner"
        app:layout_constraintTop_toTopOf="@+id/GL_Text1" />

    <TextView
        android:id="@+id/textMailPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or_enter_in_your_account_info"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/GL_Text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintSart_toStartOf="@+id/GL_Text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_ButtonSignVia" />

    <TextView
        android:id="@+id/textBoxAuth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="24sp"
        android:layout_marginRight="24sp"
        android:layout_marginBottom="16sp"
        android:background="@color/white"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/GL_UserPW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_Text2"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/EmailAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28sp"
        android:layout_marginTop="8sp"
        android:layout_marginRight="28sp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/benjamin_hoffmeister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_Text2" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28sp"
        android:layout_marginRight="28sp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/password"
        app:layout_constraintBottom_toBottomOf="@+id/textBoxAuth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailAddress"
        app:layout_constraintTop_toEndOf="textBoxAuth" />

    <TextView
        android:id="@+id/textViewFYP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_your_password"
        app:layout_constraintBottom_toTopOf="@+id/GL_UserPW"
        app:layout_constraintEnd_toEndOf="textBoxAuth"
        app:layout_constraintEnd_toStartOf="@+id/GL_ButtonTrenner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBoxAuth" />

    <TextView
        android:id="@+id/textViewFYP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_your_password"
        app:layout_constraintBottom_toTopOf="@+id/GL_UserPW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/GL_ButtonTrenner"
        app:layout_constraintTop_toBottomOf="@+id/textBoxAuth" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="24sp"
        android:layout_marginRight="24sp"
        android:text="@string/sign_in_button"
        app:layout_constraintBottom_toTopOf="@+id/GL_SignInButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GL_ForgotPW"
        app:cornerRadius="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>